# Keytime Bot - Environment Variables Template
# Copy this file to .env and fill in your actual values

# Telegram Bot Configuration
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_API=your_bot_token_here

# Google Gemini API Configuration
# Get your API key from https://makersuite.google.com/app/apikey
GEMINI_API=your_gemini_api_key_here

# Admin Chat IDs
# Get your chat ID from @userinfobot on Telegram
# For groups/channels, forward a message to @userinfobot to get the ID

# Admin chat ID for receiving form submissions
ADMIN_CHAT_ID=-1234567890123

# Admin's personal chat ID for backup restoration commands
ADMIN_CHAT_ID_BACKUP=123456789

# Admin chat ID for receiving log messages (can be personal, group, or channel)
ADMIN_CHAT_ID_LOG=-1234567890123

# Embedding Configuration (Gemini AI)
GEMINI_EMBEDDING_MODEL=gemini-embedding-001
EMBEDDING_OUTPUT_DIM=768
EMBEDDING_TASK_TYPE=retrieval_document
EMBEDDING_TEXTS_PER_BATCH=50
EMBEDDING_RPM=3000
EMBEDDING_MAX_TOKENS=400
GEMINI_EMBEDDING_CONCURRENT_LIMIT=32

# Rate Limiter Configuration
# true - respects Telegram limits (30 msg/sec globally, 1 msg/sec per chat)
# false - fast response without rate limiting
ENABLE_RATE_LIMITED_QUEUE=true